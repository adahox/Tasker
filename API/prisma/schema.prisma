generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model History {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  startTime   DateTime?
  endTime     DateTime?
  description String
  Tasks       Tasks?   @relation(fields: [tasksId], references: [id])
  tasksId     String?  @db.ObjectId
  closed Boolean @default(false)
}

model Tasks {
  id      String    @id @default(auto()) @map("_id") @db.ObjectId
  title   String
  history History[]
}
